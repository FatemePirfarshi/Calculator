<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="bottom|center"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <TextView
        android:id="@+id/txtview_result"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:gravity="center|left"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:singleLine="true"
        android:scrollHorizontally="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView"
            android:layout_width="277dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222121" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222121"
            android:text="@string/button_delete"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_7"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_8"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_9"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_div"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222121"
            android:text="@string/button_divison"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_4"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_5"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_6"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/btn_mul"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222121"
            android:textColor="#FFFFFF"
            app:srcCompat="@drawable/ic_stat_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_1"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_2"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_3"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222121"
            android:text="@string/button_sub"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_dot"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#424141"
            android:text="@string/button_0"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222121"
            android:text="@string/button_equal"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_sum"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#222121"
            android:text="@string/button_sum"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />
    </LinearLayout>

</LinearLayout>